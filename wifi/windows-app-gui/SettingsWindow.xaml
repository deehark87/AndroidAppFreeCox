<Window x:Class="FreeWifiGui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Network Interface:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Name="CbInterfaces" Width="220" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <CheckBox Name="ChkUseBuiltIn" Content="Use built-in MAC changer (requires admin)" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="BtnSave" Content="Save" Width="80" Margin="0,0,8,0" Click="BtnSave_Click" />
            <Button Name="BtnCancel" Content="Cancel" Width="80" Click="BtnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
